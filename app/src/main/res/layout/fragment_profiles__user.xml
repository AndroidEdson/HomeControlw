<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pch61m.homecontrol.profiles_User">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Spinner
            android:layout_marginLeft="20dp"
            android:id="@+id/spinner_profile"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

            <ImageButton
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_action_add"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="0.03">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:padding="5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txt_lights"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Exterior "
                        android:textColor="@color/darkgreen"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1">


                    <Switch
                        android:id="@+id/switch_terraza"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Terraza  "
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_action_wb_sunny" />

                    <SeekBar
                        android:id="@+id/seek_terraza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:padding="5dp"
                        android:progress="100"
                        android:progressTint="#FFFF00"
                        android:thumbTint="#FFFF00" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1">


                    <Switch
                        android:id="@+id/switch_patio"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Patio       "
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_action_wb_sunny" />

                    <SeekBar
                        android:id="@+id/seek_patio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:padding="5dp"
                        android:progress="100"
                        android:progressTint="#FFFF00"
                        android:thumbTint="#FFFF00" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Habitación 1 "
                        android:textColor="@color/darkgreen"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Ventilador"
                    android:textColor="@color/green"
                    android:textSize="12dp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1">

                    <Switch
                        android:id="@+id/switchventauto_room1"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Automatico  "
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switchvent_room1"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="10dp"
                        android:text="Encendido"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txt_temp1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.72"
                        android:hint="TEMP"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textColor="@color/darkred"
                        android:textStyle="italic" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_lights1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Iluminción"
                    android:textColor="@color/green"
                    android:textSize="12dp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"

                    android:weightSum="1">

                    <Switch
                        android:id="@+id/switch_rgbroom1"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="55dp"
                        android:text="Luz  "
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/colorrom1"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:padding="5dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Habitación 2 "
                        android:textColor="@color/darkgreen"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Ventilador"
                    android:textColor="@color/green"
                    android:textSize="12dp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1">

                    <Switch
                        android:id="@+id/switchventauto_room2"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Automatico  "
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switchvent_room2"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="10dp"
                        android:text="Encendido"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/textView2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.72"
                        android:hint="TEMP"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textColor="@color/darkred"
                        android:textStyle="italic" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_lights2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Iluminción"
                    android:textColor="@color/green"
                    android:textSize="12dp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"

                    android:weightSum="1">

                    <Switch
                        android:id="@+id/switch_rgbroom2"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="55dp"
                        android:text="Luz  "
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/colorrom2"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:padding="5dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btn_delete_confirmation"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:background="@android:color/holo_green_dark"
                        android:fontFamily="sans-serif-light"
                        android:text="Guardar"
                        android:textColor="@android:color/background_light"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_cancel_confirmation"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:background="@android:color/holo_red_dark"
                        android:fontFamily="sans-serif-light"
                        android:text="Cancelar"
                        android:textColor="@android:color/background_light"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</FrameLayout>
