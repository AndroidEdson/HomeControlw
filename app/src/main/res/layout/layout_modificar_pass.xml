<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF424242"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_NIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:background="#FF424242"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:padding="10dp"
            android:text="Acceso "
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF424242"
            android:padding="7dp"
            android:src="@drawable/ic_action_https" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/darkgreen"
            android:padding="5dp"
            android:text="ContraseÃ±a: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txt_PASS_ACCES"
             android:padding="5dp"
            android:layout_width="wrap_content"
            android:hint="Ingrese"
            android:textStyle="italic"
            android:textColorHint="#FF424242"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_weight="0.58" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <TextView
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/darkgreen"
            android:padding="5dp"
            android:text="NIP: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txt_NIP_ACCES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.58"
            android:hint="Ingrese"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:padding="5dp"
            android:textColorHint="#FF424242"
            android:textStyle="italic" />

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/btn_delete_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@android:color/holo_green_dark"
            android:fontFamily="sans-serif-light"
            android:text="Confirmar"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="sans-serif-light"
            android:text="Cancelar"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>


</LinearLayout>
